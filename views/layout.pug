doctype html
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='/stylesheets/comments.css')
		script(src='http://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js')
		script(src='/javascripts/global.js')
	body
		header#site-header
			h1#site-title Portfolio of Josh Bacon
			nav#site-nav-bar
				div Link1
				div Link2
				div Link3
				div Link4
		main
			nav#main-menu
				block menu
			section#main-section
				header#main-header
					block header
				div#main-content
					block content
				footer#main-footer
					section#actions
						span Share
						span Print
						span Contact
					section#comments
						h1 Comments:
						footer
							div.toggleReplies Show Replies
							div.replies
							div.create
								input.name(type='text', placeholder='Name...')
								input.text(type='text', placeholder='Comment Text...')
								button.submit Submit
		footer#site-footer
			| Website Footer (not content specific)

