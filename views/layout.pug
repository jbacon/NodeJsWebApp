doctype html
html
	head
		title= title
		script(src='jspm_packages/system.js')
		script(src='config.js')
		script(src='javascripts/views/pug-functions-auto-generated.js')
		script System.import('javascripts/globalVanilla.js');
		link(rel='stylesheet', href='/stylesheets/layout.css')
		link(rel='stylesheet', href='/stylesheets/login.css')
		link(rel='stylesheet', href='/stylesheets/register.css')
		link(rel='stylesheet', href='/stylesheets/comments.css')
		link(rel='stylesheet', href='/stylesheets/articles.css')
		link(rel='stylesheet', href='/stylesheets/accounts.css')
		link(rel='stylesheet', href='/stylesheets/modal-window.css')
	body.hidden
		header#site-header
			h1#site-title= title
			nav#site-nav-bar
				if user
					a#logout.clickable Logout
					a#greeting.clickable= 'Hello, '+user.nameFirst+' '+user.nameLast
				else
					a#register.clickable(href='#register-modal-box--open') Register
					a#login.clickable(href='#login-modal-box--open') Login
		main
			nav#main-menu
				block menu
			section#main-section
				header#main-header
					block header
				div#main-content
					block content
				footer#main-footer
					section#actions
						span.clickable Share
						span.clickable Print
						span.clickable Contact
					article#comments
		footer#site-footer
			div#login-modal-box--open.modal-box
				a.modal-box__overlay(href='#')
				div.modal-box__content
					a#login-modal-box--close.modal-box--close(href='#') X
					form#login-form(action='')
						label(for='email') Email
						input.email(id='email' type='email' name='email' placeholder='local-part@sldomain.tld')
						label(for='password') Password
						input.password(id='password' type='password' name='password' placeholder='password..')
						input.submit(type='submit' href='#')
					form#login-facebook-form(action='/auth/facebook' method='post')
						input.submit(type='submit' href='#')
					a#login-facebook-link(href='/auth/facebook') Facebook Login Link
			div#register-modal-box--open.modal-box
				a.modal-box__overlay(href='#')
				div.modal-box__content
					a#register-modal-box--close.modal-box--close(href='#') X
					form#register-form(action='')
						div
							label(for='email') Email
							input.email(id='email' type='email' name='email' placeholder='local-part@sldomain.tld')
						div
							label(for='name-first') First Name
							input.name-first(id='name-first' type='name' name='nameFirst' placeholder='John')
						div
							label(for='name-last') Last Name
							input.name-last(id='name-last' type='name' name='nameLast' placeholder='Doe')
						div
							label(for='password') Password
							input.password(id='password' type='password' name='password' placeholder='password..')
						div
							label(for='passwordRetype') Retype Password
							input.passwordRetype(id='passwordRetype' type='password' name='passwordRetype' placeholder='password..')
						div
							input.submit(type='submit')