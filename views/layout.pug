	body.hidden
		header#site-header
			h1#site-title Portfolio of Josh Bacon
			nav#site-nav-bar
				a#greeting.hidden Hello, John Doe!
				a#register(href='#register-modal-box--open') Register
				a#logout.hidden Logout
				a#login(href='#login-modal-box--open') Login
		main
			nav#main-menu
				block menu
			section#main-section
				header#main-header
					block header
				div#main-content
					block content
				footer#main-footer
					section#actions
						span Share
						span Print
						span Contact
					article#comments.comment
						h1 Comments:
						footer
							div.replies-toggle Show Replies
							div.load-newer.hidden Load New...
							div.replies.hidden
							div.load-older.hidden Load More...
							div.reply-toggle.hidden Reply
							form.create.hidden(action='')
								input.article-id(name='articleID' type='hidden' value='59344c18e987af001c119f93')
								input.parent-comment-id(name='parentCommentID' type='hidden')
								input.text(name='text' type='text' placeholder='Text...')
								input.submit(type='submit')
		footer#site-footer
			div#login-modal-box--open.modal-box
				a.modal-box__overlay(href='#')
				div.modal-box__content
					a#login-modal-box--close.modal-box--close(href='#') X
					form#login-form(action='')
						label(for='email') Email
						input.email(id='email' type='email' name='email' placeholder='local-part@sldomain.tld')
						label(for='password') Password
						input.password(id='password' type='password' name='password' placeholder='password..')
						input.submit(type='submit' href='#')
			div#register-modal-box--open.modal-box
				a.modal-box__overlay(href='#')
				div.modal-box__content
					a#register-modal-box--close.modal-box--close(href='#') X
					form#register-form(action='')
						div
							label(for='email') Email
							input.email(id='email' type='email' name='email' placeholder='local-part@sldomain.tld')
						div
							label(for='name-first') First Name
							input.name-first(id='name-first' type='name' name='nameFirst' placeholder='John')
						div
							label(for='name-last') Last Name
							input.name-last(id='name-last' type='name' name='nameLast' placeholder='Doe')
						div
							label(for='password') Password
							input.password(id='password' type='password' name='password' placeholder='password..')
						div
							label(for='passwordRetype') Retype Password
							input.passwordRetype(id='passwordRetype' type='password' name='passwordRetype' placeholder='password..')
						div
							input.submit(type='submit')