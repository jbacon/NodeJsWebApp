doctype html
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/style.css')
		script(src='http://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js' type='text/javascript')
		script(src='/javascripts/global.js' type='text/javascript')
		script(src='/javascripts/comments.js' type='text/javascript')
		script(src='/javascripts/views/commentHtmlGenerator.js' type='text/javascript')
		link(rel='stylesheet', href='/stylesheets/comments.css')
	body
		header#site-header
			h1#site-title Portfolio of Josh Bacon
			nav#site-nav-bar
				div Link1
				div Link2
				div Link3
				div Link4
		main
			nav#main-menu
				block menu
			section#main-section
				header#main-header
					block header
				div#main-content
					block content
				footer#main-footer
					section#actions
						span Share
						span Print
						span Contact
					section#comments
						h1 Comments:
						footer
							div.replies-toggle Show Replies
							div.replies
							div.create
								input.name(type='text', placeholder='Name...')
								input.text(type='text', placeholder='Comment Text...')
								button.submit Submit
		footer#site-footer
			| Website Footer (not content specific)

